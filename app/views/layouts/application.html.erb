<!DOCTYPE html>
<html>
  <head>
    <title>Pâtisserie Moriguchi</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <link href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/4.2.0/core/main.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/4.2.0/daygrid/main.min.css">
  </head>

  <body>
    <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-light">
          <a class="navbar-brand p-3" href="/"><span><strong class="name-size">Pâtisserie Moriguchi </strong></span><span class="name-size-sub"> ONLINE SHOP</span></a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto ">
            <% if end_user_signed_in? %>
              <li>
                <%= link_to "マイページ", end_user_mypage_path, class: 'nav-link text-dark space' %>
              </li>
              <li>
                <%= link_to "商品一覧", items_path, class: 'nav-link text-dark space' %>
              </li>
              <li>
                <%= link_to "カート", cart_items_path, class: 'nav-link text-dark space' %>
              </li>
              <li>
                <%= link_to "イベント", events_path, class: 'nav-link text-dark space' %>
              </li>
              <li>
                <%= link_to 'アクセス', accesses_path, class: 'nav-link text-dark space' %>
              </li>
              <li>
                <%= link_to "ログアウト", destroy_end_user_session_path, method: :delete, class: 'nav-link text-dark space' %>
              </li>
            <% elsif admin_signed_in? %>
              <li>
                <%= link_to "商品一覧", admin_items_path, class: 'nav-link text-dark space' %>
              </li>
              <li>
                <%= link_to "会員一覧", admin_end_users_path, class: 'nav-link text-dark space' %>
              </li>
              <li>
                <%= link_to "注文履歴一覧", admin_path, class: 'nav-link text-dark space' %>
              </li>
              <li>
                <%= link_to "ジャンル一覧", admin_genres_path, class: 'nav-link text-dark space' %>
              </li>
              <li>
                <%= link_to "イベント", events_path, class: 'nav-link text-dark space' %>
              </li>
              <li>
                <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: 'nav-link text-dark space' %>
              </li>
            <% else %>
              <li>
                <%= link_to "概要", about_path, class: 'nav-link text-dark space' %>
              </li>
              <li>
                <%= link_to "商品一覧", items_path, class: 'nav-link text-dark space' %>
              </li>
              <li>
                <%= link_to "イベント", events_path, class: 'nav-link text-dark space' %>
              </li>
              <li>
                <%= link_to 'アクセス', accesses_path, class: 'nav-link text-dark space' %>
              </li>
              <li>
                <%= link_to "新規登録", new_end_user_registration_path, class: 'nav-link text-dark space' %>
              </li>
              <li>
                <%= link_to "ログイン", new_end_user_session_path, class: 'nav-link text-dark space' %>
              </li>
            <% end %>
          </ul>
          </div>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
