<%= stylesheet_link_tag 'public/orders' %>
<div class ="container">
  <div class ="row">
    <div class="col-md-8">
      <h2 class="order-detail">注文履歴詳細</h2>
      <table class="table table-striped">
        <h4>注文情報</h4>
        <tbody>
          <tr>
            <td>注文日</td>
            <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
          </tr>
          <tr>
            <td>配送先</td>
            <td>
              〒<%= @order.postal_code %><br>
              <%= @order.address %><br>
              <%= @order.name %>
            </td>
          </tr>
          <tr>
            <td>支払方法</td>
            <td><%= @order.method %></td>
          </tr>
          <tr>
            <td>ステータス</td>
            <td><%= @order.status %></td>
          </tr>
        </tbody>
      </table>
      </div>
      <div class="col-md-4">
        <h4 class="money-info">請求情報</h4>
        <table class="table table-striped">
        <tbody>
          <tr>
            <td>商品合計</td>
            <td>¥<%= @order.total_price - @order.shipping_price %></td>
          </tr>
          <tr>
            <td>配送料</td>
            <td>¥<%= @order.shipping_price %></td>
          </tr>
          <tr>
            <td>ご請求額</td>
            <td>¥<%= @order.total_price %></td>
          </tr>
        </tbody>
      </table>
      </div>
      <h4 class="order-contents">注文内容</h4>
      <table class="table table-striped">
        <thead>
          <th>商品</th>
          <th>単価（税込）</th>
          <th>個数</th>
          <th>小計</th>
        </thead>
        <tbody>
          <% @order_details.each do |order_detail| %>
          <tr>
            <td><%= order_detail.item.name %></td>
            <td>¥<%= number_with_precision(order_detail.price * 1.1, precision: 0) %></td>
            <td><%= order_detail.amount %></td>
            <td>¥<%= number_with_precision(order_detail.price * 1.1.to_i * order_detail.amount.to_i, precision: 0) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
  </div>
</div>