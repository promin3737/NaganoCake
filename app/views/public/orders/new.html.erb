<div class ="container px-5 px-sm-0">
  <div class ="row">
    <div class="col-md-10">
      <h2>注文情報入力</h2>
      <%= form_with model: @order, url: orders_path, method: :post, local:true do |f| %>
      <div class="text-contents">
        <h4>支払方法</h4>
        <label><%= f.radio_button :method, "クレジットカード" %>クレジットカード</label>
        <label><%= f.radio_button :method, "銀行振込" %>銀行振込</label>
      </div>
      <div class="text-contents">
        <h4>お届け先</h4>
        <label><%= f.radio_button :address_option, 0 %>ご自身の住所</label>
        <label><%= f.radio_button :address_option, 1 %>登録済住所から選択</label>
        <%= f.select :address, current_end_user.address %>
        <label><%= f.radio_button :address_option, 2 %>新しいお届け先</label>
        <div class="form-group">
          <label for="postal_code">郵便番号</label>
          <%= f.text_field :postal_code, class: "form-control" %>
        </div>
        <div class="form-group">
          <label for="address">住所</label>
          <%= f.text_field :address, class: "form-control" %>
        </div>
        <div class="form-group">
          <label for="name">宛名</label>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <%= f.submit '確認画面へ進む', class: "btn btn-primary" %>
      </div>
      <% end %>
    </div>
  </div>
</div>