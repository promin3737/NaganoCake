<%= stylesheet_link_tag 'signup' %>
<div class="box2">
  <%= flash[:error] %>
  <div class="box-inner">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>
      <h1>新規登録</h1>
      <div class="box-name">
        <%= f.label :last_name, "姓" %><br />
        <%= f.text_field :last_name, autofocus: true %><br />
        <%= f.label :first_name, "名" %><br />
        <%= f.text_field :first_name, autofocus: true %>
      </div>
      <div class="box-name-kana">
        <%= f.label :last_name_kana, "セイ" %><br />
        <%= f.text_field :last_name_kana, autofocus: true %><br />
        <%= f.label :first_name_kana, "メイ" %><br />
        <%= f.text_field :first_name_kana, autofocus: true %>
      </div>
      <div class="box-email">
        <%= f.label :email, "Eメール" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
      <div class="box-postal_code">
        <%= f.label :postal_code, "郵便番号" %><br />
        <%= f.text_field :postal_code, autofocus: true %>
      </div>
      <div class="box-address">
        <%= f.label :address, "住所" %><br />
        <%= f.text_field :address, autofocus: true %>
      </div>
      <div class="box-phone_number">
        <%= f.label :phone_number, "電話番号" %><br />
        <%= f.text_field :phone_number, autofocus: true %>
      </div>
      <div class="box-password">
        <div class="a-row">
          <div class="column-left">
            <%= f.label :password, "パスワード" %>
          </div>
          <div class="column-right">
            <%= link_to "パスワードを忘れた場合", new_end_user_password_path %>
          </div>
        </div>
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>
      <div class="box-login">
        <%= f.submit "新規登録" %>
        <div class="legal-text">
          続行することで、Pâtisserie Moriguchiの
          <%= link_to "利用規約", "#" %>
          および
          <%= link_to "プライバシー規約", "#" %>
          に同意するものとみなされます。
        </div>
        <!--<%# if devise_mapping.rememberable? %>-->
        <!--  <div class="remember">-->
        <!--    <%#= f.check_box :remember_me %>-->
        <!--    <%#= f.label :remember, "ログインしたままにする" %>-->
        <!--  </div>-->
        <!--<%# end %>-->
      </div>
    <% end %>

    <!--<div class="box-newusr">-->
      <!--<p><span>------------</span> の新しいお客様ですか？ <span>------------</span></p>-->
    <!--  <%#= link_to "Pâtisserie Moriguchiアカウントを作成", new_end_user_registration_path %>-->
    <!--</div>-->
    <%#= render "public/shared/links" %>
  </div>
</div>