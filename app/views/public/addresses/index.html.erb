<%= stylesheet_link_tag 'public/addresses' %>
<div class ="container px-5 px-sm-0">
  <div class ="row">
    <div class="address-text">Address</div>
    <div class="col-md-11">
      <div class="input-group">
        <%= form_with model: @address, url: addresses_path, local:true do |f| %>
          <div class="form-group">
            <h4>郵便番号</h4>
            <%= f.text_field :postal_code %>
          </div>
          <div class="form-group">
            <h4>住所</h4>
            <%= f.text_field :address %>
          </div>
          <div class="form-group">
            <h4>宛名</h4>
            <%= f.text_field :name %>
          </div>
          <div class="form-group">
            <%= f.submit '新規登録', class:"btn btn-lg btn-block btn-success mt-4" %>
          </div>
        <% end %>
      </div>
    </div>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @addresses.each do |address| %>
          <tr>
            <td><%= address.postal_code %></td>
            <td><%= address.address %></td>
            <td><%= address.name %></td>
            <td>
              <%= link_to "編集する", edit_address_path(address), class:"btn btn-success" %>
              <%= link_to "削除する", address_path(address), method: :delete, class:"btn btn-danger" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
