<%= stylesheet_link_tag 'public/addresses' %>
<div class ="container px-5 px-sm-0">
  <div class ="row">
    <div class="address-text">Edit</div>
    <div class="col-md-10">
      <div class="input-group mb-3 mt-4">
        <%= form_with model: @address, local:true do |f| %>
          <%#= f.hidden_field :id, :value => address.id %>
          <div class="form-group">
              <h4>郵便番号</h4>
              <%= f.text_field :postal_code %>
          </div>
          <div class="form-group">
              <h4>住所</h4>
              <%= f.text_field :address %>
          </div>
          <div class="form-group">
              <h4>宛名</h4>
              <%= f.text_field :name %>
          </div>
          <%= f.submit '変更内容を保存', class:"btn btn-lg btn-block btn-success mt-4" %>
        <% end %>
      </div>
    </div>
  </div>
</div>