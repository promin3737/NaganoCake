<h1>マイページ</h1>
<h3>登録情報</h3>
<%= link_to "編集する", edit_customer_path(current_end_user), class: "btn btn-success" %>
<table class="table table-striped">
  <tbody>
    <tr>
      <td>氏名</td>
      <td><%= @end_user.last_name %>　<%= @end_user.first_name %></td>
    </tr>
    <tr>
      <td>カナ</td>
      <td><%= @end_user.last_name_kana %>　<%= @end_user.first_name_kana %></td>
    </tr>
    <tr>
      <td>郵便番号</td>
      <td><%= @end_user.postal_code %></td>
    </tr>
    <tr>
      <td>住所</td>
      <td><%= @end_user.address %></td>
    </tr>
    <tr>
      <td>電話番号</td>
      <td><%= @end_user.phone_number %></td>
    </tr>
    <tr>
      <td>メールアドレス</td>
      <td><%= @end_user.email %></td>
    </tr>
  </tbody>
</table>
<h3>配送先</h3>
<%= link_to "一覧を見る", addresses_path, class: "btn btn-primary" %>
<h3>注文履歴</h3>
<%= link_to "一覧を見る", orders_path, class: "btn btn-primary" %>
