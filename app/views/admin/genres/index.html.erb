<div class="container">
    <div class="row">
        <div class="col-md-8">
          <h2>ジャンル一覧・追加</h2>
            <div class="input-group mb-3 mt-4">
                <%= form_with model: @genre, url: admin_genres_path, local:true do |f| %>
                <div class="form-group">
                    <h4>ジャンル名</h4>
                    <%= f.text_field :name %>
                    <%= f.submit '新規登録', class:"btn btn-lg btn-block btn-success mt-4" %>
                </div>
                <% end %>
            </div>
            <table class="table table-striped">
                <thead>
                  <tr>
                    <th>ジャンル</th>
                  </tr>
                </thead>
                <tbody>
                  <% @genres.each do |genre| %>
                  <tr>
                    <td><%= genre.name %></td>
                    <%= link_to "編集する", edit_admin_genre_path(current_admin), {class:"btn btn-outline-secondary"} %>
                  </tr>
                  <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>
